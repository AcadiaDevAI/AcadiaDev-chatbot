# Copy this file to .env and fill values.
# IMPORTANT: Do NOT commit .env to GitHub.

# API security (optional but recommended)

# API_KEY=y8WY5oLDWkw3Vkb8wEfXnT8TKAo9tgJa8Wp1I7ao8G40
# UI_API_KEY=8WY5oLDWkw3Vkb8wEfXnT8TKAo9tgJa8Wp1I7ao8G40

# AWS / Bedrock (LOCAL ONLY; for EC2 use an IAM Role and leave these blank)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Bedrock model IDs
# BEDROCK_EMBED_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_EMBED_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_LLM_MODEL=mistral.mistral-7b-instruct-v0:2

# Storage
CHROMA_PERSIST_DIR=/app/data/chroma
UPLOAD_DIR=/app/uploads
COLLECTION_NAME=logs_titan_v2_1024

# Tuning
MAX_CHARS=4000
BATCH_SIZE=10
MAX_FILE_SIZE_MB=100

# Server
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# UI
API_BASE=http://localhost:8000
REQUEST_TIMEOUT=30
